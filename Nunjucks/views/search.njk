{% block css %}
<link rel="stylesheet" href="css/master.css" />
<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
{% endblock %}

{% block body %}
  <div id="search">
    <div class="wrapper">
      {# Left #}
      <div class="left">
        <ul class="paddingless marginless nav">
          <li class="nav-item">
            <button class="dropbtn">
              <a href="/">All IT eBooks</a>
            </button>
          </li>
          <li class="nav-item">
            <div class="dropdown">
              <button class="dropbtn">Categories</button>
              <div class="dropdown-content">
                <ul class="category paddingless">
                {% for item in getCategory %}
                  <li class="dropdown sub-category paddingless marginless">
                    <a href="/categories/{{item.name | replace(' &', '') | replace(' ', '-')}}">{{item.name}}</a>
                      <ul class="category dropdown-content paddingless">
                        {% for subCategory in item.category %}
                        <li class="sub-category paddingless marginless">
                          <a href="/categories/{{item.name | replace(' &', '') | replace(' ', '-')}}/{{subCategory.name | replace(' &', '') | replace(' ', '-')}}">{{subCategory.name}}</a>
                        </li>
                        {% endfor %}  
                      </ul>
                  </li>
                {% endfor %}
                </ul>
              </div>
            </div>
          </li>
        </ul>
      </div>

        {# Right #}
      <div class="right">
        <a href="#">Search</a>
      </div>
  </div>
  </div>
{% endblock %}